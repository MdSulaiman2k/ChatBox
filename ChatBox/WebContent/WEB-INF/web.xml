  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>MessageBox</servlet-name>
  <servlet-class>ChatBox.MessageBox</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>MessageBox</servlet-name>
  <url-pattern>/sendbox</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>CreateAccount</servlet-name>
