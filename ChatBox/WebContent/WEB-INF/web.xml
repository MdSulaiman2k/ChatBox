  </servlet>
  <servlet-mapping>
  <servlet-name>CreateAccount</servlet-name>
  <url-pattern>/createaccount</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>SearchBox</servlet-name>
  <servlet-class>ChatBox.SearchBox</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>SearchBox</servlet-name>
  <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>Search</servlet-name>
  <servlet-class>ChatBox.MessageBox</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Search</servlet-name>
  <url-pattern>/MessageBox</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>secondMessage</servlet-name>
  <servlet-class>ChatBox.SearchBox</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>secondMessage</servlet-name>
  <url-pattern>/message</url-pattern>
  </servlet-mapping>
  
